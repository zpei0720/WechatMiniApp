<template name="postItemTpl">
  <view class="post-container">
  <view class="post-author-date">
    <image src="{{avatar}}" />
    <text>{{date}}</text>
  </view>
  <text class="post-title">{{title}}</text>
  <image class="post-image" src="{{postImg}}" mode="aspectFill" />
  <text class="post-container">{{content}}</text>
  <view class="post-like">
    <image src="/images/icon/like.jpg" />
    <text>{{likeNum}}</text>
    <image src="/images/icon/comment.jpg" />
    <text>{{commentNum}}</text>
    <image src="/images/icon/view.jpg" />
    <text>{{viewNum}}</text>
  </view>
  </view>
</template>